@using LIBSchool_FinalProjectBackEnd.Helpers
@model FilterCourseVM
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="filtercourse">
        <div class="container">
            <div class="row mt-5 d-flex justify-content-between">
                <div class="col-lg-3">
                    <h1>Kurslar</h1>
                </div>
                <div class="col-lg-5">

                    <div class="box mt-2 d-flex justify-content-evenly">
                        <span class="me-2 filtre">FİLTİRLƏ:</span>

                        <select class="customerSelect form-control">
                            <option selected>Secim edin</option>
                            <option value="@Url.Action("Index","StartCourse",new{filter=Convert.ToInt32(FilterName.HightPrice)})">Qiymətcə yüksək</option>
                            <option value="@Url.Action("Index","StartCourse",new{filter=Convert.ToInt32(FilterName.LowerPrice)})">Qiymətcə aşağı</option>
                        </select>
                        <span style="background-color: rgb(242,242,242) ; border-radius: 5px;" class="grip ms-2"><i class="fa-solid fa-grip"></i></span>
                        <span style="border-radius: 5px;" class="list"><i class="fa-solid fa-list"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="course">
        <div class="container">
            <div class="row  mt-5">
                @foreach (var item in Model.Courses)
                {
                    <div class="col-lg-3 col-md-6 col-sm-12 coursefiltershow">
                        <div data-aos="zoom-in-up" data-aos-delay="50" class="box mt-4">
                            <div class="price">
                                <p>@item.Price AZN</p>
                            </div>
                            <div class="image">
                                <img src="~/assets/img/courses/@item.Image" alt="">
                            </div>
                            <div class="textbox">
                                <div class="title ms-3 mt-3">
                                    <span>@item.Name</span>
                                </div>
                                <div class="btn mt-3">
                                    <a href="" class="btn btn-dark">DAHA ƏTRAFLI</a>
                                </div>
                            </div>
                            <div class="comment">
                                <div class="icons mt-2">
                                    <span class="me-2 ms-3"><i class="fa-solid fa-comment me-1"></i>0</span>
                                    <span><i class="fa-solid fa-user me-1"></i>0</span>
                                </div>
                                @* <div class="monthly d-flex justify-content-end me-3">
                                    <span>89.00 AZN - 159.00 AZN</span>
                                    </div>*@
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>

