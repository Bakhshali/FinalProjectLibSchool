@using ProjectLIBSchoolFinal.Models
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<OnlineExam>
@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive">
    <a asp-controller="onlineexam" asp-action="create" class="btn btn-success" style="border-radius:15px; position:absolute;right:40px;top:90px; background-color:#6366F1;border:none; width:50px;"><i class="fa-solid fa-plus"></i></a>
    <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Questions <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>
      <th scope="col">Detail <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>
      <th scope="col">Delete <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>
    </tr>
  </thead>
  <tbody>
   @foreach (var exam in Model)
  {
      <tr>
          <td>@exam.Question</td>
      
          <td ><a asp-controller="onlineexam" asp-action="detail" asp-route-id="@exam.Qid" class="btn btn-success" style="border-radius:15px; background-color:#FFA500;border:none; width:50px;" ><i style="font-size:17px" class="fa-solid fa-circle-info"></i></a></td>
          <td><a asp-controller="onlineexam" asp-action="delete" asp-route-id="@exam.Qid" class="btn btn-danger" style="border-radius:15px;border:none; width:50px;"><i class="fa-solid fa-trash"></i></a></td>
      </tr>
  }
 
  </tbody>
</table>
</div>
<div class="d-flex justify-content-center">
    @Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}),new X.PagedList.Web.Common.PagedListRenderOptionsBase
    {
    LiElementClasses=new[] {"page-item"},
    PageClasses = new[] {"page-link"}
    })
</div>

