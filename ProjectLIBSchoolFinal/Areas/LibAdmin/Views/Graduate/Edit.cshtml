@model Graduate
@{
    ViewData["Title"] = "Edit";
}

<div class="m-3 mt-5">
    <div class="title">
        <h2 style="color:#273044"> <span style="color:#FF0000">#</span> Düzəliş et</h2>
    </div>
    <form method="post" enctype="multipart/form-data" class="mt-4">
        <div>
            <input class="form-control" asp-for="Name" placeholder="Ad"> <br />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div>
            <input class="form-control" asp-for="Surname" placeholder="Soyad"> <br />
            <span class="text-danger" asp-validation-for="Surname"></span>
        </div>
        <div>
            <input class="form-control" asp-for="Position" placeholder="Vəzifəsi"> <br />
            <span class="text-danger" asp-validation-for="Position"></span>
        </div>
        <div>
            <input class="form-control" asp-for="Work" placeholder="İşlədiyi yer"> <br />
            <span class="text-danger" asp-validation-for="Work"></span>
        </div>
        <div>
            <input class="form-control" asp-for="Master" placeholder="İxtisasın adı"> <br />
            <span class="text-danger" asp-validation-for="Master"></span>
        </div>

        <div>
            <input class="form-control" asp-for="University" placeholder="Universitet"> <br />
            <span class="text-danger" asp-validation-for="University"></span>
        </div>
        <div>
            <label>Seçilmiş tələbədir?</label> <br />
            <input style="width:25px;height:25px" asp-for="IsChoose"> <br />
            <span class="text-danger" asp-validation-for="IsChoose"></span>
        </div>
        <div class="mt-2">
            <select class="form-control" asp-for="CountryId" asp-items="@(new SelectList(ViewBag.Country,"Id","Name"))"><option>Ölkə</option></select> <br />
            <span class="text-danger" asp-validation-for="CountryId"></span>
        </div>
        <div>
            <input asp-for="Photo"> <br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-success mt-3">Yadda saxla</button>
        </div>
    </form>
</div>


