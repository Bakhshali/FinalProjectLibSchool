@model Graduate
@{
    ViewData["Title"] = "Detail";
}

<div class="m-4">
    <div>
        <h4>Image</h4>
        <img style="width:200px;height:150px" src="~/assets/img/students/@Model.Image">
    </div>
    <div>
        <h4 class="mt-3">Tələbənin adı</h4>
        <p>@Model.Name @Model.Surname</p>
    </div>
    <div>
        <h4 class="mt-3">Vəzifə</h4>
        <p>@Model.Position</p>
    </div>
    <div>
        <h4 class="mt-3">İş yeri</h4>
        <p>@Model.Work</p>
    </div>
    <div>
        <h4 class="mt-3">Magistr</h4>
        <p>@Model.Master</p>
    </div>
    <div>
        <h4 class="mt-3">University</h4>
        <p>@Model.University</p>
    </div>
    <div>
        <a asp-controller="graduate" asp-action="index" class="btn btn-success mt-2">Back</a>
    </div>
</div>

    